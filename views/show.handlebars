<h1 class="mb-1 restaurantinfo-show-title mx-auto w-50 py-2">{{restaurantinfo.name}}</h1>
<div class="container">
  <div class="row">
    <div class="col-12 col-md-10 mx-auto">

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-utensils pr-2"></i>
          類別：
        </span>
        {{restaurantinfo.category}}
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-map-marker-alt pr-2"></i>
          地址：
        </span>
        {{restaurantinfo.location}}
        <a href="{{restaurantinfo.google_map}}" class="text-secondary" target="_blank">
          <i class="fas fa-location-arrow pr-2 fa-xs"></i>
        </a>
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-mobile-alt pr-2"></i>
          電話：
        </span>
        {{restaurantinfo.phone}}
      </p>

      <p class="mb-5">
        {{restaurantinfo.description}}
      </p>

      <img class="rounded mx-auto d-block mb-4 w-100" src="{{restaurantinfo.image}}" alt="{{restaurantinfo.name}}"
        style="max-width: 600px;">
        
        <div class="float-right">
          <a href="/restaurants/{{{restaurantinfo.id}}}/edit" class="btn border mb-1">編輯</a>
          <a href="/" class="btn border mb-1">返回</a>
          <button type="submit" class="border p-2 m-1">刪除</button>
        </div>
    </div>
  </div>
</div>